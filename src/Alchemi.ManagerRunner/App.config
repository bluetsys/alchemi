<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!-- Register a section handler for the log4net section -->
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  
  <appSettings>
    <!-- To enable internal log4net logging specify the following appSettings key -->
    <!-- <add key="log4net.Internal.Debug" value="true"/> -->
  </appSettings>
  
  <system.runtime.remoting>
    <customErrors mode="off" />
  </system.runtime.remoting>
  
  <!-- This section contains the log4net configuration settings -->
  <log4net>
    <!-- Define some output appenders -->
    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="${TEMP}\Alchemi\Manager\logs\alchemi-manager.log" />
      <!-- new file for every program execution-->
      <appendToFile value="false" />
      <rollingStyle value="Composite" />
      <!-- new file for every day -->
      <datePattern value="yyyyMMdd" />
      <!-- new file for every MB -->
      <maximumFileSize value="1MB" />
      <!-- keep some backups -->
      <maxSizeRollBackups value="50" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level [%ndc] [%mdc] - %message%newline%newline" />
      </layout>
    </appender>
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%ndc] [%mdc] [%F:%M:%L] &lt;%property{auth}&gt; - %message%newline" />
      </layout>
    </appender>
    <!-- Setup the root category, add the appenders and set the default level -->
    <root>
      <level value="WARN" />
    </root>
    <!-- Specify the level for some specific categories -->
    <logger name="Alchemi.Core">
      <level value="ALL" />
      <appender-ref ref="RollingLogFileAppender" />
      <appender-ref ref="ConsoleAppender" />
    </logger>
    <logger name="Alchemi.Manager">
      <level value="ALL" />
      <appender-ref ref="RollingLogFileAppender" />
      <appender-ref ref="ConsoleAppender" />
    </logger>
    <logger name="Alchemi.ManagerExec">
      <level value="ALL" />
      <appender-ref ref="RollingLogFileAppender" />
      <appender-ref ref="ConsoleAppender" />
    </logger>
  </log4net>

</configuration>